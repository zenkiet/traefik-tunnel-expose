# User/Group Identifiers
# These help avoid permission issues between host and container
PUID=1000
PGID=1000
UMASK=022

# Container name prefix
CONTAINER_PREFIX=

# Paths for persistent data
CONFIG_PATH=/opt/appdata/config
DATA_PATH=/opt/appdata/data

# Container settings
TZ=Asia/Ho_Chi_Minh
RESTART_POLICY=unless-stopped
NETWORK_MODE=bridge

# ===== REQUIRED =====
HOST=127.0.0.1
BASE_DOMAIN=zenkiet.dev
TAG=latest

# =============================================================================
# AUTO UPDADTE
# =============================================================================
AUTO_UPDATE=TRUE
GOTIFY_URL=
GOFITY_TOKEN=


# =============================================================================
# CLOUDFLARE TUNNEL
# =============================================================================
CF_ENABLED=true
CLOUDFLARE_DNS_API_TOKEN=your_cloudflare_zone_api_token_here
CF_ZONE_ID=your_cloudflare_zone_id
CF_TUNNEL_ID=your_cloudflare_tunnel_id
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_TUNNEL_SECRET=your_cloudflare_account_secret_id
CF_API_EMAIL=kietgolx65234@gmail.com
ACME_CA_SERVER=https://acme-staging-v02.api.letsencrypt.org/directory

#! For production, use:
# ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory

#! For Advanced
#--DNS Proxy Configuration--
#CF_PROXY_DNS=true
#CF_PROXY_DNS_ADDRESS=0.0.0.0
#CF_PROXY_DNS_PORT=53
#CF_PROXY_DNS_MAX_CONNS=10

#--Cloudflare Tunnel Logging--
#CF_LOG_LEVEL=info
#CF_TUNNEL_PROTOCOL=quic

#--Connection Settings--
#CF_NO_AUTOUPDATE=false
#CF_GRACE_PERIOD=30s
#CF_CATCHALL_SERVICE=http_status:404

# =============================================================================
# TRAEFIK PROXY
# =============================================================================
#--Global Settings--
#CHECK_NEW_VERSION=true
#SEND_ANONYMOUS_USAGE=false

#--API & Dashboard--
#TRAEFIK_DASHBOARD=true
#TRAEFIK_API_INSECURE=true
#TRAEFIK_DEBUG=false

#--Ports Configuration--
#HTTP_PORT=80
#HTTPS_PORT=443
#TRAEFIK_PORT=8080

#--Providers--
#PROVIDERS_THROTTLE=2s
#TRAEFIK_CONFIG_DIR=/etc/traefik/conf.d
#TRAEFIK_WATCH_CONFIG=true

#--Docker Provider--
#DOCKER_ENDPOINT=unix:///var/run/docker.sock
#DOCKER_EXPOSED_DEFAULT=false
#DOCKER_WATCH=true

#--SSL/TLS Configuration--
#CERT_RESOLVER=internal
#ACME_STORAGE=/etc/traefik/ssl/acme.json
#DNS_PROVIDER=cloudflare
#DNS_RESOLVER_1=1.1.1.1:53
#DNS_RESOLVER_2=1.0.0.1:53

#--Logging Configuration--
#LOG_LEVEL=INFO
#LOG_FORMAT=json
#ACCESS_LOG_FORMAT=json
#LOG_RETRY_ATTEMPTS=true
#LOG_MIN_DURATION=10ms
#LOG_BUFFER_SIZE=0

#--Header Logging--
#HEADER_LOG_MODE=drop
#LOG_USER_AGENT=keep
#LOG_AUTHORIZATION=drop
#LOG_COOKIE=drop
#LOG_SET_COOKIE=drop

#--Security--
#INSECURE_SKIP_VERIFY=true

#----OTLP----#
METRICS_OTLP=signoz:4317
TRACING_OTLP=signoz:4317
INSCURE_OTLP=true

#--Health Check--
#PING_ENTRYPOINT=traefik

#--Optional: Tracing (Jaeger)--
#JAEGER_SAMPLING_URL=http://localhost:5778/sampling
#JAEGER_AGENT=127.0.0.1:6831

#--Optional: Rate Limiting--
#RATE_LIMIT_BURST=100
#RATE_LIMIT_PERIOD=1s